---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import OtherNews from "../components/OtherNews.astro";
---

<Layout title="News Homepage">
  <main class="p-8 md:p-20 relative">
    <Navbar />
    <section
      class="w-full h-screen md:h-[620px] mt-8 grid grid-cols-1 md:grid-cols-3 md:grid-rows-3"
    >
      <section class="md:col-span-3 md:row-span-2 bg-blue-500"></section>
      <OtherNews />
    </section>
  </main>
</Layout>
